{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":enablePreCommit",
    "github>mcsrobert/renovate-config"
  ],
  "flux": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": [
        "app-template YAML schema"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/bjw-s-labs/helm/app-template",
      "managerFilePatterns": [
        "/(^|/)helm-?release.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "# yaml-language-server: \\$schema=https://raw\\.githubusercontent\\.com/bjw-s-labs/helm-charts/app-template-(?<currentValue>\\d+\\.\\d+\\.\\d+)/charts/other/app-template/schemas/helmrelease-helm-v2\\.schema\\.json"
      ],
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": [
        "CloudnativePG Postgresql version"
      ],
      "datasourceTemplate": "docker",
      "managerFilePatterns": [
        "/\\.yaml$/"
      ],
      "matchStrings": [
        "imageName: (?<depName>\\S+):(?<currentValue>.*\\-.*)"
      ],
      "versioningTemplate": "redhat"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "helm-values"
      ],
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "Flux",
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "matchPackageNames": [
        "/flux-operator/",
        "/flux-instance/"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "Immich",
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "matchPackageNames": [
        "/immich-/"
      ]
    }
  ]
}
