{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>mcsrobert/renovate-config"
  ],
  "flux": {
    "managerFilePatterns": ["/\\.ya?ml$/"]
  },
  "helm-values": {
    "managerFilePatterns": ["/\\.ya?ml$/"]
  },
  "customManagers": [
    {
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/bjw-s-labs/helm/app-template",
      "managerFilePatterns": ["/(^|/)helmrelease.*\\.ya?ml$/"],
      "matchStrings": [
        "# yaml-language-server: \\$schema=https://raw\\.githubusercontent\\.com/bjw-s-labs/helm-charts/app-template-(?<currentValue>\\d+\\.\\d+\\.\\d+)/charts/other/app-template/values\\.schema\\.json"
      ],
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["helm-values"],
      "matchDatasources": ["docker"],
      "pinDigests": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["flux-operator", "flux-instance"],
      "groupName": "Flux",
      "group": {
         "commitMessageTopic": "{{{groupName}}} group"
      }
    },
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["immich-"],
      "groupName": "Immich",
      "group": {
         "commitMessageTopic": "{{{groupName}}} group"
      }
    }
  ]
}
