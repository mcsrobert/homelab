{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>mcsrobert/renovate-config"
  ],
  "flux": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)helmrelease.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "# yaml-language-server: \\$schema=https://raw\\.githubusercontent\\.com/bjw-s-labs/helm-charts/app-template-(?<currentValue>\\d+\\.\\d+\\.\\d+)/charts/other/app-template/values\\.schema\\.json"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/bjw-s-labs/helm/app-template",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "description": [
        "OCI Helm charts don't have a digest and break Renovate"
      ],
      "matchDatasources": [
        "docker"
      ],
      "matchDepNames": [
        "flux-instance",
        "flux-operator",
        "ghcr.io/bjw-s-labs/helm/app-template",
        "ghcr.io/controlplaneio-fluxcd/charts/flux-instance",
        "ghcr.io/controlplaneio-fluxcd/charts/flux-operator",
        "ghcr.io/prometheus-community/charts/prometheus-operator-crds",
        "dragonfly-operator",
        "reloader"
      ],
      "pinDigests": false
    }
  ]
}
